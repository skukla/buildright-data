{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "description": "Schema for giftcards data type - array of gift card product definitions",
  "items": {
    "type": "object",
    "properties": {
      "product": {
        "type": "object",
        "properties": {
          "sku": { "type": "string" },
          "type_id": { "type": "string" },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "attribute_set_id": { "type": "number" },
          "status": { "type": "number" },
          "visibility": { "type": "number" },
          "giftcard_type": { "type": "number" },
          "giftcard_amounts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "website_id": { "type": "number" },
                "value": { "type": "number" },
                "website_value": { "type": "number" }
              }
            }
          }
        },
        "required": ["sku"]
      }
    },
    "required": ["product"]
  }
}

