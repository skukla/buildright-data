              "type": "object",
              "properties": {
                "label": { "type": "string" },
                "value": { "type": "string" },
                "sort_order": { "type": "number" },
                "is_default": { "type": "boolean" }
              },
              "required": ["label"]
            }
          },
          "is_user_defined": { "type": "boolean" },
          "default_frontend_label": { "type": "string" },
          "frontend_labels": {
            "type": "array",
            "items": { "type": "object" }
          },
          "backend_type": { "type": "string" },
          "source_model": { "type": "string" },
          "backend_model": { "type": "string" },
          "default_value": { "type": "string" },
          "is_unique": { "type": ["string", "boolean"] },
          "validation_rules": {
            "type": "array",
            "items": { "type": "object" }
          },
          "position": { "type": "number" }
        },
        "required": ["attribute_code", "frontend_input"]
      }
    },
    "required": ["attribute"]
  }
