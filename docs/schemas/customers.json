{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for customers data type - supports source.items structure",
  "properties": {
    "source": {
      "type": "object",
      "properties": {
        "entity": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "email": { "type": "string" },
              "firstname": { "type": "string" },
              "lastname": { "type": "string" },
              "group_id": { "type": ["number", "string"] },
              "_store": { "type": "string" },
              "_website": { "type": "string" },
              "behavior": { "type": "string" }
            },
            "required": ["email"]
          }
        }
      },
      "required": ["entity", "items"]
    }
  },
  "required": ["source"]
}

