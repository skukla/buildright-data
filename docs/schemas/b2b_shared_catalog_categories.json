{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for b2b_shared_catalog_categories data type - catalog category assignments",
  "properties": {
    "catalogs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" }
              },
              "required": ["id"]
            }
          }
        },
        "required": ["name", "categories"]
      }
    }
  },
  "required": ["catalogs"]
}

