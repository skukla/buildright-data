{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "description": "Schema for b2b_shared_catalog_company_assignments data type - array of company assignments to shared catalogs",
  "items": {
    "type": "object",
    "properties": {
      "assignment": {
        "type": "object",
        "properties": {
          "shared_catalog_name": { "type": "string" },
          "companies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "company_name": { "type": "string" }
              },
              "required": ["company_name"]
            }
          }
        },
        "required": ["shared_catalog_name", "companies"]
      }
    },
    "required": ["assignment"]
  }
}

